generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Driver {
  id             String   @id @default(cuid())
  telegramUserId String   @unique
  fullName       String
  firstName      String?
  lastName       String?
  middleName     String?
  isActive       Boolean  @default(true)
  isPinned       Boolean  @default(false)
  pendingMileage Int?
  pendingReceiptFileId String?
  pendingVehicleId String?
  pendingPaymentMethod PaymentMethod?
  pendingReceiptId String?
  pendingStep    String?
  lastSeenAt     DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  receipts       Receipt[]
  payouts        DriverPayment[]
  paymentDetails DriverPaymentDetail[]
  listItems      CustomListItem[]
}

model Vehicle {
  id          String   @id @default(cuid())
  name        String
  plateNumber String? @unique
  model       String?
  makeModel   String?
  year        Int?
  vin         String?
  engine      String?
  color       String?
  purchasedAt DateTime?
  purchasedOdometerKm Int?
  currentOdometerKm   Int?
  notes       String?
  isActive    Boolean  @default(true)
  isTelegramEnabled Boolean @default(false)
  isPinned    Boolean  @default(false)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  receipts    Receipt[]
  listItems   CustomListItem[]
}

model Receipt {
  id           String   @id @default(cuid())

  driverId     String
  driver       Driver   @relation(fields: [driverId], references: [id])

  vehicleId    String
  vehicle      Vehicle  @relation(fields: [vehicleId], references: [id])

  receiptAt    DateTime?
  mileage      Int?

  stationName  String?
  stationInn   String?
  paymentMethod PaymentMethod?
  paymentComment String?
  reimbursed   Boolean @default(false)
  paidByDriver Boolean @default(false)

  totalAmount  Decimal  @db.Decimal(12,2)
  liters       Decimal? @db.Decimal(10,3)
  pricePerLiter Decimal? @db.Decimal(12,4)
  fuelType     FuelType?
  fuelGroup    FuelGroup?
  hasGoods     Boolean @default(false)
  goodsAmount  Decimal? @db.Decimal(12,2)
  addressShort String?
  imagePath    String?
  pdfPath      String?
  qrRaw        String?
  dataSource   DataSource? @default(TELEGRAM)

  raw          Json?
  status       ReceiptStatus @default(DONE)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  items        ReceiptItem[]

  @@index([receiptAt])
  @@index([driverId, receiptAt])
  @@index([vehicleId, receiptAt])
}

model Shift {
  id            String   @id @default(cuid())
  driverName    String
  plateNumber   String?
  routeName     String
  routeNumber   String?
  plannedTime   String?
  assignedTime  String?
  departureTime String?
  delayMinutes  Int?
  shiftDate     DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([shiftDate])
  @@index([driverName])
  @@index([routeName])
}

model RouteRate {
  id        String   @id @default(cuid())
  routeName String   @unique
  rate      Decimal  @db.Decimal(12,2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DriverPayment {
  id            String   @id @default(cuid())
  driverId      String
  driver        Driver   @relation(fields: [driverId], references: [id])
  amount        Decimal  @db.Decimal(12,2)
  paymentDate   DateTime @default(now())
  accountedDate DateTime?
  payoutType    String?
  period        String?
  periodFrom    DateTime?
  periodTo      DateTime?
  comment       String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([driverId])
  @@index([paymentDate])
}

model DriverPaymentDetail {
  id        String   @id @default(cuid())
  driverId  String
  driver    Driver   @relation(fields: [driverId], references: [id])
  type      String
  bankName  String?
  account   String
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([driverId])
}

model CustomList {
  id        String   @id @default(cuid())
  name      String
  type      String
  items     CustomListItem[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CustomListItem {
  id        String     @id @default(cuid())
  listId    String
  list      CustomList @relation(fields: [listId], references: [id], onDelete: Cascade)
  driverId  String?
  driver    Driver?    @relation(fields: [driverId], references: [id])
  vehicleId String?
  vehicle   Vehicle?   @relation(fields: [vehicleId], references: [id])
  routeName String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([listId])
}

model ReceiptItem {
  id        String   @id @default(cuid())

  receiptId String
  receipt   Receipt  @relation(fields: [receiptId], references: [id], onDelete: Cascade)

  name      String
  quantity  Decimal? @db.Decimal(10,3)
  unitPrice Decimal? @db.Decimal(12,2)
  amount    Decimal? @db.Decimal(12,2)
  isFuel    Boolean  @default(false)

  createdAt DateTime @default(now())

  @@index([receiptId])
}

enum ReceiptStatus {
  PENDING
  DONE
  FAILED
  MANUAL
}

enum FuelType {
  AI92
  AI95
  DIESEL
  GAS
  OTHER
}

enum FuelGroup {
  BENZIN
  DIESEL
  GAS
  OTHER
}

enum PaymentMethod {
  CARD
  CASH
  QR
  SELF
}

enum DataSource {
  QR
  MANUAL
  TELEGRAM
}

model LateDelay {
  id                String   @id @default(cuid())
  driverName        String
  plateNumber       String?
  routeName         String
  plannedTime       String?
  assignedTime      String?
  delayMinutes      Int
  delayDate         DateTime
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([delayDate])
  @@index([driverName, delayDate])
}
